<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stafffx.Controller.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <!-- Table View for Employee Records -->
        <TableView fx:id="employeeTable">
            <columns>
                <TableColumn text="ID" fx:id="idColumn"/>
                <TableColumn text="Name" fx:id="nameColumn"/>
                <TableColumn text="Department" fx:id="departmentColumn"/>
                <TableColumn text="Position" fx:id="positionColumn"/>
                <TableColumn text="Salary" fx:id="salaryColumn"/>
            </columns>
        </TableView>

        <!-- Buttons for CRUD Operations -->
        <Button text="Create" onAction="#handleCreateAction"/>
        <Button text="Update" onAction="#handleUpdateAction"/>
        <Button text="Delete" onAction="#handleDeleteAction"/>
        <Button text="View" onAction="#handleViewAction"/>
        <Button text="Back" onAction="#handleBackAction"/>
    </children>
</VBox>
